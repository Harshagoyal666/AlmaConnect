<%- include ("../partials/header") %>
<div class="container">
    <div class="row">
<h1 style="text-align: center;">Edit <%=Report.name%></h1>
<div style="width: 30%; margin: 25px auto;">
<form action="/Reports/<%=Report._id%>?_method=PUT" method="POST">
    <div class="form-group">
<input class="form-control" type="text" name="Report[heading]" value="<%=Report.heading%>">
</div>
<div class="form-group">
<input class="form-control" type="text" name="Report[image]" value="<%=Report.image%>">
</div>
<div class="form-group">
    <input class="form-control" type="text" name="Report[college]" value="<%=Report.college%>">
  </div>
<div class="form-group">
    <textarea class="form-control" rows="3" class="scrollabletextbox" input   name="Report[experience]" value="<%=Report.experience%>"></textarea>
    
    </div>
<div class="form-group">
<button class="btn btn-lg btn-primary btn-block" style="background-color:rgb(197, 114, 114)">Submit!</button>
</div>
</form>
<a href="/Reports" style="color:rgb(197, 114, 114)">Go Back</a>
</div>

</div>
</div>
<%- include ("../partials/footer") %>