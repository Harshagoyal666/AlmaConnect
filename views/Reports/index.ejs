<%- include ("../partials/header") %>

<div class="container">
<header class="jumbotron card card-image" style="background-image: url(https://sacompassion.net/wp-content/uploads/2016/09/walking-alone.jpg);background-position: center;
background-repeat: no-repeat;
background-size: cover;">
    <div class="container">
    <h1 style="font-family:Apple Chancery, cursive;">Welcome to Almaconnect</h1>
    <p>View success stories of your Alumnis</p>
    <p>
        <a class="btn btn-primary btn-large" href="/Reports/new">Add your experiences</a>
    </p>
    <p>
        <form action="/Reports" method="GET" class="form-inline"> 
            <div class="form-group">
            <input type="text" name="search" placeholder="College search..." class="form-control">
            <input type="submit" value="Search" class="btn btn-default">
        </div>
        </form>
    </p>

    
</div>
</header>


<div class="row text-center" style="display:flex; flex-wrap: wrap;"class="row match-to-row">
    <% if(noMatch !== undefined){%>
        <h3><%=noMatch%></h3>
    <%}%>
<% for(var Report of Reports){ %>
    <div class="col-md-3 col-sm-6" >
        <div class="thumbnail">
                <img style="height:150px" src= "<%= Report.image %>" >
        
        <div class="caption">
               <h4 style="font-weight: bold"><%= Report.author.username %></h4>
               <h4 style="font-weight: bold">College:<%= Report.college %></h4>
        </div>
        <p>
           <a href="/Reports/<%= Report._id%>" class="btn btn-primary">More Info</a> 
        </p>
    </div>
        
    </div>
<% }%>
</div>
</div>
<footer class="footer" style="background-color:rgb(66, 43, 43);position: fixed;bottom:0px;width: 100%;left: 0;">
    <div class="container">
        
      <!-- Social buttons -->
      <ul class="list-unstyled list-inline text-center">
        <li class="list-inline-item">
          <a class="btn-floating btn-fb mx-1">
            <i class="fa fa-facebook fa-2x" style="color:white;"></i>
          </a>
        </li>
        <li class="list-inline-item">
          <a class="btn-floating btn-tw mx-1">
            <i class="fa fa-twitter fa-2x" style="color:white;"> </i>
          </a>
        </li>
        <li class="list-inline-item">
          <a class="btn-floating btn-gplus mx-1">
            <i class="fa fa-instagram fa-2x" style="color:white;"></i>
          </a>
        </li>
        <li class="list-inline-item">
          <a class="btn-floating btn-li mx-1">
            <i class="fa fa-linkedin-square fa-2x" style="color:white;"></i>
          </a>
        </li>
      </ul>
      <!-- Social buttons -->
  
    </div>
    <!-- Footer Elements -->
  
    <!-- Copyright -->
